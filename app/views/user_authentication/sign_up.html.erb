<h1>Sign up</h1>

<form action="/insert_user" method="post">

  <div>
    <label for="email_box">Email</label>
    <input id="email_box" name="query_email" placeholder="Choose a email..." type="text">
  </div>
                 
  <div>
    <label for="first_name_box">First Name</label>
      
    <input type="text" id="first_name_box" name="query_first_name">
  </div>
         
  <div>
    <label for="last_name_box">Last Name</label>
      
    <input type="text" id="last_name_box" name="query_last_name">
  </div>
         
  <div>
    <label for="city_box">City</label>
      
    <input type="text" id="city_box" name="query_city">
  </div>
         
  <div>
    <label for="focus">B@B Focus</label>

    <select name="focus" id="focus">
  <option value=""></option>
  <option value="vc">Venture Capital</option>
  <option value="startups">Startups</option>
    </select>
      
  </div>
         
  <div>
    <label for="current_employer_box">Current Employer</label>
      
    <input type="text" id="current_employer_box" name="query_current_employer">
  </div>
         
  <div>
    <label for="bio_box">Bio</label>
      
    <input type="text" id="bio_box" name="query_bio">
  </div>
         
  <div>
    <label for="image_box">Image</label>
      
    <input type="text" id="image_box" name="query_image">
  </div>
    
  <div>
    <label for="password_box">Password</label>
    <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
  </div>

  <div>
    <label for="password_confirmation_box">Password Confirmation</label>
    <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
  </div>

  <button>
    Sign up
  </button>
</form>

<hr>

<p>
  Or, <a href="/user_sign_in">Sign in</a> instead.
</p>
